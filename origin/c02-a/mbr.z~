SECTION MBR vstart=0x7c00         
   mov ax,cs      
   mov ds,ax
   mov es,ax
   mov ss,ax
   mov fs,ax
   mov sp,0x7c00

; ¿¿ ¿¿0x06¿¿¿¿¿¿¿¿¿¿¿¿¿¿¿
; -----------------------------------------------------------
;INT 0x10   ¿¿¿:0x06	   ¿¿¿¿:¿¿¿¿
;------------------------------------------------------
;¿¿¿
;AH ¿¿¿= 0x06
;AL = ¿¿¿¿¿(¿¿¿0,¿¿¿¿)
;BH = ¿¿¿¿¿
;(CL,CH) = ¿¿¿¿¿¿(X,Y)¿¿
;(DL,DH) = ¿¿¿¿¿¿(X,Y)¿¿
;¿¿¿¿¿
   mov     ax, 0x600
   mov     bx, 0x700
   mov     cx, 0           ; ¿¿¿: (0, 0)
   mov     dx, 0x184f	   ; ¿¿¿: (80,25),
			   ; VGA¿¿¿¿¿,¿¿¿¿¿¿80¿¿¿,¿25¿¿
			   ; ¿¿¿0¿¿,¿¿0x18=24,0x4f=79
   int     0x10            ; int 0x10

;;;;;;;;;    ¿¿¿¿¿¿¿¿¿¿¿¿¿¿    ;;;;;;;;;
;.get_cursor¿¿¿¿¿¿¿¿,¿¿¿¿¿¿¿¿¿¿.
   mov ah, 3		; ¿¿: 3¿¿¿¿¿¿¿¿¿¿¿,¿¿¿¿ah¿¿¿
   mov bh, 0		; bh¿¿¿¿¿¿¿¿¿¿¿¿¿¿¿

   int 0x10		; ¿¿: ch=¿¿¿¿¿,cl=¿¿¿¿¿
			; dh=¿¿¿¿¿¿,dl=¿¿¿¿¿¿

;;;;;;;;;    ¿¿¿¿¿¿¿¿    ;;;;;;;;;;;;;;;;

;;;;;;;;;     ¿¿¿¿¿    ;;;;;;;;;;;
   ;¿¿¿10h¿¿,¿¿¿¿¿¿¿13¿¿¿¿¿¿¿¿¿
   mov ax, message 
   mov bp, ax		; es:bp ¿¿¿¿¿, es¿¿¿cs¿¿¿
			; ¿¿¿¿¿¿sreg¿¿¿

   ; ¿¿¿¿¿¿¿dx¿¿¿¿¿¿,cx¿¿¿¿¿¿¿¿¿
   mov cx, 5		; cx ¿¿¿¿,¿¿¿¿¿¿0¿¿¿¿¿
   mov ax, 0x1301	; ¿¿¿¿13¿¿¿¿¿¿¿¿,¿¿¿ah¿¿¿,
			; al¿¿¿¿¿¿¿ ah=01: ¿¿¿¿¿,¿¿¿¿¿¿
   mov bx, 0x2		; bh¿¿¿¿¿¿¿¿,¿¿¿¿0¿,
			; bl¿¿¿¿¿¿, ¿¿¿¿¿¿(bl = 02h)
   int 0x10		; ¿¿BIOS 0x10 ¿¿¿
;;;;;;;;;      ¿¿¿¿¿¿¿	 ;;;;;;;;;;;;;;;

   jmp $		; ¿¿¿¿¿¿¿

   message db "1 MBR"
   times 510-($-$$) db 0
   db 0x55,0xaa

